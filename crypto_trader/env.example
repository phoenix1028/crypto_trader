# =============================================================================
# 加密货币交易系统环境变量配置
# =============================================================================

# 基础配置
APP_NAME=AI_Crypto_Trader
APP_ENV=production

# =============================================================================
# AI/LLM配置
# =============================================================================

# DeepSeek AI配置
OPENAI_API_KEY=your_deepseek_api_key_here
OPENAI_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.1

# =============================================================================
# LangSmith追踪配置 (新增)
# =============================================================================

# LangSmith API Key
LANGSMITH_API_KEY=your_langsmith_api_key_here

# 是否启用追踪
LANGSMITH_TRACING=true

# 追踪项目名称
LANGSMITH_PROJECT=AI_Crypto_Trader

# LangSmith服务端点 (可选，默认为 https://api.smith.langchain.com)
# LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# Binance API配置
# =============================================================================

# Binance API密钥 (生产环境)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key

# Binance测试网配置 (开发环境)
BINANCE_TESTNET=true
BINANCE_TESTNET_API_KEY=your_testnet_api_key
BINANCE_TESTNET_SECRET_KEY=your_testnet_secret_key

# =============================================================================
# 交易配置
# =============================================================================

# 杠杆配置
DEFAULT_LEVERAGE=20
MARGIN_TYPE=ISOLATED

# 是否使用期货交易
USE_FUTURES=true

# 测试网模式
FUTURES_TESTNET=true

# =============================================================================
# 数据源配置
# =============================================================================

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 数据更新间隔 (秒)
DATA_UPDATE_INTERVAL=1

# 技术指标计算周期
RSI_PERIOD=14
EMA_SHORT_PERIOD=20
EMA_LONG_PERIOD=50
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
ATR_PERIOD=14

# =============================================================================
# 风控配置
# =============================================================================

# 最大交易金额 ($)
MAX_TRADE_AMOUNT=1000

# 单笔交易最小金额 ($)
MIN_TRADE_AMOUNT=10

# 每日最大交易次数
MAX_DAILY_TRADES=10

# RSI风控阈值
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# =============================================================================
# 智能触发器配置
# =============================================================================

# AI调用频率控制 (每小时最大调用次数)
MAX_AI_CALLS_PER_HOUR=120

# 触发器最小间隔 (秒)
MIN_TRIGGER_INTERVAL=30

# 价格波动阈值 (百分比)
PRICE_VOLATILITY_THRESHOLD=0.2

# 市场情绪阈值
MARKET_SENTIMENT_THRESHOLD=0.5

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/crypto_trader.log

# 是否输出到控制台
LOG_TO_CONSOLE=true

# =============================================================================
# 数据库配置 (可选)
# =============================================================================

# PostgreSQL配置
# DATABASE_URL=postgresql://user:password@localhost:5432/crypto_trader

# SQLite配置 (开发用)
# DATABASE_URL=sqlite:///crypto_trader.db

# =============================================================================
# WebSocket配置
# =============================================================================

# WebSocket连接超时 (秒)
WEBSOCKET_TIMEOUT=10

# WebSocket重连间隔 (秒)
WEBSOCKET_RECONNECT_INTERVAL=5

# =============================================================================
# 监控配置
# =============================================================================

# 健康检查端口
HEALTH_CHECK_PORT=8080

# 性能指标收集
ENABLE_METRICS=true

# Prometheus指标端点
PROMETHEUS_PORT=9090

# =============================================================================
# 安全配置
# =============================================================================

# API请求超时 (秒)
API_TIMEOUT=30

# API重试次数
API_RETRY_COUNT=3

# API重试间隔 (秒)
API_RETRY_INTERVAL=1

# =============================================================================
# 其他配置
# =============================================================================

# 是否启用模拟模式 (true=只分析不下单)
SIMULATION_MODE=false

# 是否启用DEBUG模式
DEBUG_MODE=false

# 配置文件路径
CONFIG_FILE=configs/config.py